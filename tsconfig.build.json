{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"declaration": true,
		"lib": ["ES2020"],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"skipLibCheck": true,
		"declarationMap": true,
		"alwaysStrict": true,
		"paths": {
			"src/*": ["./src/*"]
		},
		"jsx": "react-jsx",
		"forceConsistentCasingInFileNames": true,
		"plugins": [{ "transform": "typescript-transform-paths" }]
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "dist"]
}
