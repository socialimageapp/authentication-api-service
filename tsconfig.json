{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"declaration": true,
		"lib": ["ES2023"],
		"outDir": "./dist",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"declarationMap": true,
		"alwaysStrict": true,
		"paths": {},
		"forceConsistentCasingInFileNames": true
	},
	"include": ["./src/**/*", "src/index.d.ts", ".config/**/*"],
	"exclude": ["node_modules", "dist", "eslint.config.mjs"]
}
